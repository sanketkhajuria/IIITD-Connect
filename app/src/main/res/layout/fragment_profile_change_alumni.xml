        <Spinner
            android:id="@+id/editstatuschange1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingTop="20dp"
            android:layout_below="@+id/editcontactchange1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"

            />


        <EditText
            android:id="@+id/editdobchange1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:hint="@string/D_O_B"
            android:paddingTop="20dp"
            android:layout_below="@id/editstatuschange1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />
        <ImageButton
            android:id="@+id/datebuttonchange1"
            android:text="click"

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/editstatuschange1"
            android:layout_alignRight="@+id/editdobchange1"
            android:background="@drawable/calendar"/>



        <EditText
            android:id="@+id/editcompanychange1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/Company"
            android:paddingTop="20dp"
            android:layout_below="@id/editdobchange1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />


        <EditText
            android:id="@+id/editlinkdinchange1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/Linkdin"
            android:paddingTop="20dp"
            android:layout_below="@id/editcompanychange1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />


        <EditText
            android:id="@+id/editwebsitechange1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/Website"
            android:paddingTop="20dp"
            android:layout_below="@id/editlinkdinchange1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />




        <EditText
            android:id="@+id/edityearofpasschange1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="@string/Year_of_passing"
            android:paddingTop="20dp"
            android:layout_below="@id/editwebsitechange1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />

        <Button
            android:id="@+id/buttonchange1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="30dp"
            android:text="@string/Save"
            android:layout_below="@id/edityearofpasschange1"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>


    </RelativeLayout>
</ScrollView>