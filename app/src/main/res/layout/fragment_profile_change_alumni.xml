        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/photochange1"
            android:layout_width="223dp"
            android:layout_height="223dp"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="108dp"
            android:src="@drawable/photo"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#8BC34A"
            app:civ_shadow_radius="1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="108dp" />

        <ImageButton
            android:id="@+id/camerachange1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/photochange1"
            android:layout_alignRight="@id/photochange1"
            android:scaleType="fitCenter"
            android:src="@drawable/camera"
            android:background="@color/iiit"/>


        <EditText
            android:id="@+id/editnamechange1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/Name"
            android:paddingTop="20dp"
            android:layout_below="@id/camerachange1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />


        <Spinner
            android:id="@+id/editbranchchange1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingTop="20dp"
            android:layout_below="@id/editnamechange1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />


        <EditText
            android:id="@+id/editcontactchange1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="@string/Conatct_no"
            android:paddingTop="20dp"
            android:layout_below="@id/editbranchchange1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />


        <!--        <EditText-->
        <!--            android:id="@+id/editstatus1"-->
        <!--            android:layout_width="match_parent"-->
